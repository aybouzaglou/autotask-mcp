{
  "name": "autotask-mcp",
  "version": "2.1.4",
  "description": "MCP (Model Context Protocol) server for Kaseya Autotask PSA integration",
  "private": true,
  "type": "module",
  "main": "dist/cli.js",
  "module": "src/index.ts",
  "bin": {
    "autotask-mcp": "dist/cli.js"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:smithery",
    "build:ts": "tsc",
    "build:smithery": "npx @smithery/cli build",
    "dev": "npx @smithery/cli dev",
    "dev:cli": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest --testPathIgnorePatterns=MANUAL",
    "test:watch": "jest --watch --testPathIgnorePatterns=MANUAL",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=MANUAL",
    "test:live-api": "jest tests/integration/.*MANUAL.*",
    "test:mapping": "tsx scripts/test-mapping.js",
    "test:pagination": "tsx scripts/test-pagination.js",
    "test:mapping-simple": "tsx scripts/test-mapping-simple.js",
    "test:smithery": "node scripts/test-smithery-http.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "pretest": "npm run build:ts",
    "mcp": "node dist/cli.js",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "autotask",
    "kaseya",
    "psa",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "autotask-node": "^1.0.0",
    "axios": "^1.12.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@smithery/cli": "^1.2.31",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "semantic-release": "^22.0.12",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
